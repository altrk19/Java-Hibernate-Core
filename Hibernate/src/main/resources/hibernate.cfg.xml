        <!--<mapping class="_08_onetomany_mapping_mappedBy.entity.VehicleEntity8"/>-->
        <!--<mapping class="_08_onetomany_mapping_mappedBy.entity.UserEntity8"/>-->
        <mapping class="_09_manytomany_mapping.entity.UserEntity9"/>
        <mapping class="_09_manytomany_mapping.entity.VehicleEntity9"/>

    </session-factory>

</hibernate-configuration>